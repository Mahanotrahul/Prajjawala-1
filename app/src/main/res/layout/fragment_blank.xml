                    android:id="@+id/tv18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv16"
                    android:layout_alignRight="@+id/tv16"
                    android:layout_below="@+id/tv17"
                    android:layout_marginTop="5dp"
                    android:text="Cylinder Code : "
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    app:fontFamily="@font/basic" />
                <TextView
                    android:id="@+id/tv19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv16"
                    android:layout_toRightOf="@+id/tv16"
                    android:text="XXXX XXXX XXXX"
                    android:textColor="#f4f681"
                    android:textSize="15sp"
                    app:fontFamily="@font/basic"/>
                <TextView
                    android:id="@+id/tv20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv19"
                    android:layout_alignLeft="@+id/tv19"
                    android:layout_below="@+id/tv19"
                    android:layout_marginTop="5dp"
                    android:text="Prajjwala Customer"
                    android:textColor="#f4f681"
                    android:textSize="15sp"
                    app:fontFamily="@font/basic" />
                <TextView
