                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv19"
                    android:layout_alignLeft="@+id/tv19"
                    android:layout_below="@+id/tv20"
                    android:layout_marginTop="5dp"
                    android:text="D-07"
                    android:textColor="#f4f681"
                    android:textSize="15sp"
                    app:fontFamily="@font/basic" />


            </RelativeLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/model_r"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:textStyle="bold"
                app:fontFamily="@font/basic" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/gaso" />

            <ProgressBar
                android:id="@+id/pb"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="13dp"
                android:layout_height="155dp"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="25dp"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:max="100"
                android:min="0"
                android:progress="100"
                android:progressDrawable="@drawable/casual"
                android:rotation="0" />

            <!--<Button
             android:id="@+id/button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
